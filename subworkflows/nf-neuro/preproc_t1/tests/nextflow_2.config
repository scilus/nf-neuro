process {
    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }
    withName: "IMAGE_RESAMPLE" {
        ext.interp = "lin"
    }
    withName: "BETCROP_CROPVOLUME_T1" {
        ext.output_bbox = true
        ext.first_suffix = "t1"
    }
    withName: "BETCROP_SYNTHBET" {
        memory = "8G"
        ext.nocsf = true
    }
}

params.run_synthbet = true

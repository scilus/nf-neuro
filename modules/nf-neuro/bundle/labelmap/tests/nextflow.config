process {
    publishDir = { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" }
    withName: "BUNDLE_LABELMAP" {
        ext.nb_points = 10
        ext.colormap = "jet"
        ext.threshold = 0.001
        ext.hyperplane = false
        ext.use_manhattan = true
        ext.skip_uniformize = false
        ext.correlation_threshold = 0
        ext.streamline_threshold = 0
    }
}

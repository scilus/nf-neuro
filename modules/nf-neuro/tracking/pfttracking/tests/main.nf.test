                        file("\${test_data_directory}/map_wm.nii.gz"),
                        file("\${test_data_directory}/map_gm.nii.gz"),
                        file("\${test_data_directory}/map_csf.nii.gz"),
                        file("\${test_data_directory}/fodf.nii.gz"),
